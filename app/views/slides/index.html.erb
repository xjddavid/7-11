<h1>Listing slides</h1>

<table>

<% @slides.each do |slide| %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td>
      <%= image_tag(slide.image_url, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
        <dt><%= slide.title %></dt>
        <dd><%= truncate(strip_tags(slide.description),
               length: 80) %></dd>
      </dl>
    </td>
    
    <td class="list_slideno">
    	<p>Slide No.</p>
    	<p> <%= slide.slideno%> </p>
    </td>
    
	  <td class="list_actions"> 
	    <%= link_to 'Show', slide %><br />
	    <%= link_to 'Edit', edit_slide_path(slide) %><br />
	    <%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' } %><br />
	  </td>
  </tr>
<% end %>
</table>

<br />

